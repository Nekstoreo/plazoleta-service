      {
        "name": "Orders",
        "item": [
          {
            "name": "Create Order - Success",
            "request": {
              "auth": {
                "type": "bearer",
                "bearer": [
                  {
                    "key": "token",
                    "value": "{{clientToken}}",
                    "type": "string"
                  }
                ]
              },
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"restaurantId\": 1,\n  \"items\": [\n    {\n      \"dishId\": 1,\n      \"quantity\": 2\n    },\n    {\n      \"dishId\": 2,\n      \"quantity\": 1\n    }\n  ]\n}"
              },
