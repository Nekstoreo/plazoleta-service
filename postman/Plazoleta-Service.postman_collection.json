{
    "info": {
        "name": "Plazoleta Service",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Restaurants",
            "item": [
                {
                    "name": "Create Restaurant - Success",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Restaurante El Buen Sabor\",\n  \"nit\": \"900123456\",\n  \"address\": \"Calle 123 #45-67\",\n  \"phone\": \"+573001234567\",\n  \"logoUrl\": \"https://example.com/logo.png\",\n  \"ownerId\": 1\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/restaurants",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "restaurants"
                            ]
                        },
                        "description": "Creates a new restaurant with valid data. Expected: 201 Created. Note: ownerId must be a valid user with OWNER role."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Dishes",
            "item": [
                {
                    "name": "Create Dish - Success",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-Owner-Id",
                                "value": "1",
                                "description": "ID of the owner creating the dish"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Hamburguesa Cl√°sica\",\n  \"price\": 25000,\n  \"description\": \"Deliciosa hamburguesa con carne 100% res, lechuga, tomate y salsa especial\",\n  \"imageUrl\": \"https://example.com/burger.jpg\",\n  \"category\": \"Hamburguesas\",\n  \"restaurantId\": 1\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/dishes",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "dishes"
                            ]
                        },
                        "description": "Creates a new dish for a restaurant. Expected: 201 Created. Note: X-Owner-Id header must match the restaurant owner."
                    },
                    "response": []
                },
                {
                    "name": "Update Dish - Success",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-Owner-Id",
                                "value": "1",
                                "description": "ID of the owner updating the dish"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"price\": 28000,\n  \"description\": \"Hamburguesa premium con carne 100% res, queso cheddar, lechuga fresca, tomate y salsa especial de la casa\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/dishes/1",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "dishes",
                                "1"
                            ]
                        },
                        "description": "Updates price and description of an existing dish. Expected: 200 OK. Note: X-Owner-Id header must match the restaurant owner."
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8082",
            "type": "string"
        }
    ]
}
