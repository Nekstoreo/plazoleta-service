          {
            "name": "List Orders By Status - Pending",
            "request": {
              "auth": {
                "type": "bearer",
                "bearer": [
                  {
                    "key": "token",
                    "value": "{{employeeToken}}",
                    "type": "string"
                  }
                ]
              },
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/api/v1/orders?status=PENDING&page=0&size=10",
                "host": [
                  "{{baseUrl}}"
                ],
                "path": [
                  "api",
                  "v1",
                  "orders"
                ],
                "query": [
                  {
                    "key": "status",
                    "value": "PENDING",
                    "description": "Order status (PENDING, IN_PREPARATION, READY, DELIVERED, CANCELLED)"
                  },
                  {
                    "key": "page",
                    "value": "0",
                    "description": "Page number (0-based)"
                  },
                  {
                    "key": "size",
                    "value": "10",
                    "description": "Number of elements per page"
                  }
                ]
              },
              "description": "Lists orders filtered by status. Only employees can access this endpoint. Returns orders from the restaurant associated with the authenticated employee."
            },
            "response": []
          },
